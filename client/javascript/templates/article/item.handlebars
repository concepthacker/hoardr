<div id="article_{{this._id}}" class="col-lg-3 col-md-4 col-sm-6 col-xs-12 article-item">
    <a 
        data-id="{{this._id}}"
        data-url="{{this.url}}"
        href="/article/{{this._id}}"
        class="thumbnail article"
    >
            {{#if this.image}}
            <img
                class="article-image"
                alt="{{this.title}}"
                src="{{this.image}}"
                onerror="this.parentNode.removeChild(this);"
            />
            {{/if}}

            <div class="caption">
                <h3 class="article-header">{{this.title}}</h3>
                {{#with this.description}}
                <p class='article-description'>{{this}}</p>
                {{/with}}
                <p class='source'>{{parsesource this.url}}</p>
            </div>

            <button type="button" class="close" data-action="delete" aria-hidden="true">Ã—</button>
        </a>
</div>
