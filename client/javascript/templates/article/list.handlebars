{{#each this}}
    <li data-id="{{this._id}}" data-url="{{this.url}}" class="media well">
        <a class="pull-left" href="/article/{{this._id}}">
            <img
                class="media-object"
                alt="{{this.title}}"
                src="{{#if this.image}}{{this.image}}{{else}}/images/placeholder.png{{/if}}"
                style="width: 64px; height: 64px;">
        </a>

        <div class="media-body">
            <h4 class="media-heading"><a href="/article/{{this._id}}">{{this.title}}</a></h4>
        </div>
        <button type="button" class="close" data-action="delete" aria-hidden="true">Ã—</button>
    </li>
{{/each}}
