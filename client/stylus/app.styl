@import 'nib'

body#landing
    padding-top 80px

body#notfound
    padding-top 80px

.page-header
    padding-bottom 40px

.hidden
    display none

.table-thumbnail
    min-height 30px

#framecontent
    height 500px
    border 1px solid #E4E4E4

.top15
    margin-top 15px

.top30
    margin-top 30px

.bottom15
    margin-bottom 15px

.bottom30
    margin-bottom 30px 

textarea
    resize vertical

.article-header
    margin-top 5px
    margin-bottom 0px

.article-description
    margin-top 10px
    margin-bottom 0px

.article-image
    width 100%

.article
    background-color white
    box-shadow 1px 2px 20px 1px lightgrey
    border-radius 0

#content img
    width 100%
    height auto
    border 1px solid gainsboro

.header-image
    width 100%

iframe
    width 100%
    height auto

.limit-container
    margin auto
    max-width 700px

#content
    p
        font-family "Merriweather", "Helvetica Neue", Helvetica, Arial, sans-serif
        font-weight 300
        margin 2.0em 0 2.0em 0
        line-height 1.6
        word-wrap break-word
        font-size 17px
        letter-spacing 0.01rem
        text-align justify
    h1
        font-size 1.7em
    h2
        font-size 1.6em
    h3
        font-size 1.5em

.media-object
    border 1px solid gainsboro

pre, code
    white-space pre-wrap
    white-space -moz-pre-wrap
    white-space -pre-wrap
    white-space -o-pre-wrap
    word-wrap break-word

.header-title
    word-wrap break-word

.header-title h1
    font-size 52px
    font-weight 700

@media (max-width: 768px)
    .header-title h1
        font-size 46px

@media (max-width: 480px)
    .header-title h1
        font-size 36px

p.source
    margin 10px 0 0 0
    color gray

.navbar
    margin-bottom 0

.navbar-default
    background-color #0485A9
    border 0

.navbar-brand
    height auto
    color whitesmoke !important

.navbar-nav li a.menu-item
    color whitesmoke

.navbar-nav li.active a.menu-item
    background-color white

.navbar-logo
    margin-right 5px

.navbar-logo-text
    vertical-align text-bottom
    color white

@media screen and (-webkit-min-device-pixel-ratio:0)
    select:focus, textarea:focus, input:focus
        font-size 16px
        background #eee

button.close
    padding 10px
    margin -35px -5px 0 0

#guide img
    max-width 100%

a:hover
    text-decoration none
