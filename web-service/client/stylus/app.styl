@import 'nib'

.page-header
    padding-bottom 40px

.hidden
    display none

.table-thumbnail
    min-height 30px

#framecontent
    height 500px
    border 1px solid #E4E4E4

.top15
    margin-top 15px
.top30
    margin-top 30px

.bottom15
    margin-bottom 15px
.bottom30
    margin-bottom 30px

#content
    p
        margin 20px 0 20px 0
        word-wrap break-word
        font-size 18px

.media-object
    border 1px solid gainsboro

pre, code
    white-space pre-wrap
    white-space -moz-pre-wrap
    white-space -pre-wrap
    white-space -o-pre-wrap
    word-wrap break-word

#guide img
    max-width 100%
    padding 4px
    border 1px dashed gray
    border-radius: 5px;
    margin 10px 0 10px 0

textarea
    resize vertical